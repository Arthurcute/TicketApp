<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    >
    <TextView
        android:id="@+id/item_tenSuKienMy"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Teen Sự kiện"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:fontFamily="@font/roboto_bold"
        android:paddingLeft="16dp"
        android:textColor="@color/sunset"/>
    <TextView
        android:id="@+id/item_tenLoaiVe"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Loai ve"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:fontFamily="@font/roboto_regular"
        android:paddingLeft="16dp"
        android:textColor="@color/sunset"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_soLuongVeMua"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="So luong"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="16dp"
            android:textColor="@color/sunset"/>
        <TextView
            android:id="@+id/item_tongTienMua"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Tong tien"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="16dp"
            android:textColor="@color/sunset"/>
    </LinearLayout>
    <TextView
        android:id="@+id/item_ngayMua"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="ngayMua"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:fontFamily="@font/roboto_regular"
        android:paddingLeft="16dp"
        android:textColor="@color/sunset"/>

</LinearLayout>