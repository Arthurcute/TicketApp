<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BuyTicketActivity">

  <TextView
      android:id="@+id/titleBuy"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginLeft="50dp"
      android:background="@color/sunset"
      android:elevation="8dp"
      android:fontFamily="@font/roboto_bold"
      android:gravity="center"
      android:text="Noi dung buoc thuc hien"
      android:textColor="@color/petal"
      android:textSize="18sp" />

<ImageView
    android:id="@+id/exitBuyTicket"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:background="@color/sunset"
  android:src="@drawable/chevron_left_24px"
  android:padding="6dp"
  />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  android:orientation="vertical"
  android:layout_marginTop="50dp"
  >

  <androidx.viewpager.widget.ViewPager
      android:id="@+id/viewPagerTicket"
      android:layout_weight="1"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
    />
</LinearLayout>
  </RelativeLayout>