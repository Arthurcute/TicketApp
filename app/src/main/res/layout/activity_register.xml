<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/petal"
    tools:context=".activity.LoginActivity">
    <ImageView
        android:id="@+id/backLogin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/chevron_left_24px"
        android:padding="6dp"
        android:background="@drawable/bg_tron"
        android:layout_margin="10dp"
        android:elevation="6dp"
/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginTop="85dp"
            android:background="@drawable/bg_input_stoke_dam"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:text="Ticket"
        android:textColor="@color/sunset"
        android:textSize="24sp"
        android:paddingLeft="2sp"
        android:paddingRight="2sp"
        android:elevation="8dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:fontFamily="@font/pacifico_regular"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="110dp"
        android:text="Tạo tài khoản mới"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center_vertical"
        android:fontFamily="@font/roboto_bold"
        />
    <EditText
        android:id="@+id/nameRegister"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/bg_input_stoke_dam"
        android:hint="Họ và tên"
        android:paddingLeft="16dp"
        />
    <EditText
        android:id="@+id/emailRegister"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/bg_input_stoke_dam"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="16dp"
        />
    <EditText
        android:id="@+id/phoneRegister"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/bg_input_stoke_dam"
        android:hint="Số điện thoại"
        android:paddingLeft="16dp"
        />
    <EditText
        android:id="@+id/passRegister"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/bg_input_stoke_dam"
        android:hint="Mật khẩu"
        android:inputType="textEmailAddress"
        android:paddingLeft="16dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/birthRegister"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="dd/mm/yyyy"
            android:gravity="center_vertical"
            android:fontFamily="@font/roboto_regular"
            android:background="@drawable/bg_input_stoke_dam"
            android:paddingLeft="16dp"
            android:layout_marginRight="20dp"
            android:textSize="16sp"
            />

        <Spinner
            android:id="@+id/genderRegister"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Giới tính"
            android:gravity="center_vertical"
            android:background="@drawable/bg_input_stoke_dam"
            android:fontFamily="@font/roboto_regular"
            android:paddingLeft="16dp"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:entries="@array/province_list"
            android:prompt="@string/prompt_select_province"
            android:spinnerMode="dropdown" />

    </LinearLayout>


    <TextView
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="510dp"
        android:elevation="8dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:gravity="center"
        android:background="@drawable/bg_button_selected"
        android:text="Đăng ký"
        android:textSize="16sp"
        android:textColor="@color/petal"
        />
    <CalendarView
        android:id="@+id/calenderRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/petal"
        android:layout_margin="50dp"
        android:layout_centerVertical="true"
        android:elevation="8dp"
        android:visibility="invisible"
        />
    <View
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="145dp"
        android:background="@color/sunset"
        android:layout_marginLeft="60dp"/>
    <View
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="145dp"
        android:background="@color/sunset"
        android:layout_marginRight="60dp"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Hoặc"
        android:textColor="@color/sunset"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Đăng nhập bằng"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/logo_google"
        android:padding="5dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:background="@color/white"
        android:elevation="6dp"
        />
</RelativeLayout>