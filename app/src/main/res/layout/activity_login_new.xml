<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sunset"
    tools:context=".activity.LoginNewActivity">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/book_online_24px"
        android:padding="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="16dp"
        android:text="TICKET"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/quicksand_bold"
        android:gravity="center_vertical"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="Chào mừng bạn quay trở lại!
Hãy đăng nhập."
        android:layout_marginLeft="25dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="25dp"
        android:fontFamily="@font/quicksand_bold"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_weight="1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/blur_xanhnhat"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:text="Xin chào,"
            android:textColor="@color/white"
            android:fontFamily="@font/quicksand_bold"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            >
            <TextView
                android:id="@+id/nameUserFinger"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Nguyễn Trần Phương Ly"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center_vertical"
                android:layout_marginRight="55dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/loginWithFinger"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/fingerprint"
                />
        </LinearLayout>
        <EditText
            android:id="@+id/passLoginFinger"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:inputType="textPassword"
            android:fontFamily="@font/quicksand_semibold"
            android:textSize="18sp"
            android:hint="Mật khẩu"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/newAccount"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tài khoản khác"
                android:fontFamily="@font/quicksand_semibold"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:textColor="@color/petal"
                />
            <TextView
                android:id="@+id/forgotPassFinger"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Quên mật khẩu?"
                android:fontFamily="@font/quicksand_semibold"
                android:textSize="16sp"
                android:gravity="center_vertical|end"
                android:textColor="@color/petal"
                />
        </LinearLayout>
        <Button
            android:id="@+id/loginPassFinger"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_bo_duoi"
            android:text="Đăng nhập"
            android:fontFamily="@font/quicksand_semibold"
            />
    </LinearLayout>

</RelativeLayout>